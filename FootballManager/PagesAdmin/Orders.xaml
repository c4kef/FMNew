<ui:Page
    x:Class="FootballManager.PagesAdmin.Orders"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:sc="clr-namespace:SamplesCommon;assembly=SamplesCommon"
    xmlns:common="clr-namespace:FootballManager.Common"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource
            x:Key="cvs"
            Source="{Binding}" />

        <common:ItemCountConverter x:Key="ItemCountConverter" />

        <DataTemplate x:Key="RowGroupHeaderTemplate">
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock
                    Margin="4,0,0,0"
                    Text="{Binding Name}"
                    Style="{StaticResource BodyTextBlockStyle}" />
                <TextBlock
                    Margin="4,0,0,0"
                    Text="{Binding ItemCount, Converter={StaticResource ItemCountConverter}}"
                    Style="{StaticResource BodyTextBlockStyle}" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid
        x:Name="LayoutRoot"
        Margin="{StaticResource ControlPageContentMargin}">
        <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <sc:ControlExample
            HeaderText="Список спортивного инвентаря"
            Style="{StaticResource ControlExampleFullStyle}">
                <ScrollViewer Grid.Column="0">
                <DataGrid
                x:Name="dataGridSportEquipment"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                IsReadOnly="True"
                GridLinesVisibility="Horizontal"
                RowDetailsVisibilityMode="Collapsed"
                VirtualizingPanel.VirtualizationMode="Recycling"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                        Header="id"
                        Width="105"
                        Binding="{Binding id}" Visibility="Hidden"/>
                        <DataGridTextColumn
                        Header="Наименование"
                        Width="135"
                        Binding="{Binding name}" />
                        <DataGridTextColumn
                        Header="Стоимость (USD)"
                        Width="135"
                        Binding="{Binding price}" />
                    </DataGrid.Columns>
                    <DataGrid.GroupStyle>
                        <GroupStyle
                        ContainerStyle="{StaticResource DataGridRowGroupContainerStyle}"
                        HeaderTemplate="{StaticResource RowGroupHeaderTemplate}" />
                    </DataGrid.GroupStyle>
                </DataGrid>
                    </ScrollViewer>
                <sc:ControlExample.Options>
                    <ScrollViewer
                    Margin="-16"
                    Width="300">
                        <ui:SimpleStackPanel
                        Margin="15" 
                        HorizontalAlignment="Center"
                        Orientation="Vertical"
                        Style="{StaticResource OptionsPanelStyle}">
                            <TextBox x:Name="SearchUISE" ui:ControlHelper.PlaceholderText="Поиск по названию" Height="22" KeyUp="SearchSE" />
                            <StackPanel Orientation="Horizontal">
                                <Button VerticalAlignment="Top" Content="Добавить" Click="AddSE" Margin="0,0,0,0"/>
                                <Button VerticalAlignment="Top" Content="Удалить" Click="RemoveSE" Margin="10,0,0,0"/>
                                <Button VerticalAlignment="Top" Content="Изменить" Click="EditSE" Margin="10,0,0,0"/>
                            </StackPanel>
                            <Button HorizontalAlignment="Center" Content="Отчёт" Click="ExportSE" Margin="0,0,0,0"/>
                        </ui:SimpleStackPanel>
                    </ScrollViewer>
                </sc:ControlExample.Options>
            </sc:ControlExample>
            <sc:ControlExample
            HeaderText="Список заказов"
            Style="{StaticResource ControlExampleFullStyle}">
                <ScrollViewer Grid.Column="0">
                <DataGrid
                x:Name="dataGridOrderEquipment"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                IsReadOnly="True"
                GridLinesVisibility="Horizontal"
                RowDetailsVisibilityMode="Collapsed"
                ScrollViewer.CanContentScroll="True" 
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                VirtualizingPanel.VirtualizationMode="Recycling"
                VirtualizingPanel.IsVirtualizingWhenGrouping="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                        Header="id"
                        Width="105"
                        Binding="{Binding id}" Visibility="Hidden"/>
                        <DataGridTextColumn
                        Header="Дата заказа"
                        Width="127"
                        Binding="{Binding date_created, StringFormat=dd/MM/yyyy}" />
                        <DataGridTextColumn
                        Header="Дата выполнения"
                        Width="127"
                        Binding="{Binding date_ended, StringFormat=dd/MM/yyyy}" />
                        <DataGridTextColumn
                        Header="Статус заказа"
                        Width="105"
                        Binding="{Binding status}" />
                        <DataGridTextColumn
                        Header="Сотрудник"
                        Width="135"
                        Binding="{Binding surname}" />
                        <DataGridTextColumn
                        Header="Товар"
                        Width="135"
                        Binding="{Binding name}" />
                        <DataGridTextColumn
                        Header="Количество"
                        Width="105"
                        Binding="{Binding count}" />
                    </DataGrid.Columns>
                    <DataGrid.GroupStyle>
                        <GroupStyle
                        ContainerStyle="{StaticResource DataGridRowGroupContainerStyle}"
                        HeaderTemplate="{StaticResource RowGroupHeaderTemplate}" />
                    </DataGrid.GroupStyle>
                </DataGrid>
                </ScrollViewer>
                <sc:ControlExample.Options>
                    <ScrollViewer
                    Margin="-16"
                    Width="300">
                        <ui:SimpleStackPanel
                        Margin="15" 
                        HorizontalAlignment="Center"
                        Orientation="Vertical"
                        Style="{StaticResource OptionsPanelStyle}">
                            <TextBox x:Name="SearchUIOE" ui:ControlHelper.PlaceholderText="Поиск по названию" Height="22" KeyUp="SearchOE" />
                            <StackPanel Orientation="Horizontal">
                                <Button VerticalAlignment="Top" Content="Добавить" Click="AddOE" Margin="0,0,0,0"/>
                                <Button VerticalAlignment="Top" Content="Удалить" Click="RemoveOE" Margin="10,0,0,0"/>
                                <Button VerticalAlignment="Top" Content="Изменить" Click="EditOE" Margin="10,0,0,0"/>
                            </StackPanel>
                            <Button HorizontalAlignment="Center" Content="Отчёт" Click="ExportOE" Margin="0,0,0,0"/>
                            <Calendar Name="dteSelectedMonth" DisplayMode="Year" SelectionMode="None" DisplayModeChanged="Calendar_OnSelectedDatesChanged" />
                        </ui:SimpleStackPanel>
                    </ScrollViewer>
                </sc:ControlExample.Options>
            </sc:ControlExample>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:Page>
