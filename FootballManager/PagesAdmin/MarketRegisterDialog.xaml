<ui:ContentDialog
    x:Class="FootballManager.PagesAdmin.MarketRegisterDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019" 
    xmlns:pagesadmin="clr-namespace:FootballManager.PagesAdmin"
    Title="Регистрация игрока"
    PrimaryButtonText="Применить"
    CloseButtonText="Отмена"
    DefaultButton="Primary">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <!-- Content body -->
        <TextBox PreviewTextInput="CheckLetters" ui:ControlHelper.CornerRadius="10" ui:ControlHelper.PlaceholderText="Логин" Margin="0,5,0,0" Text="{Binding Login}"/>
        <TextBox ui:ControlHelper.CornerRadius="10" ui:ControlHelper.PlaceholderText="Пароль" Margin="0,5,0,0" Text="{Binding Pass}"/>
    </StackPanel>

</ui:ContentDialog>
